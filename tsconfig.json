{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "lib": [
      "dom",
      "esnext"
    ]
  }
}
